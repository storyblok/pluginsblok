{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "parallel": 5,
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "!{projectRoot}/apps/**/*"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["default"],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "test": {
      "inputs": ["default"],
      "cache": true
    },
    "lint": {
      "inputs": ["default"],
      "cache": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "inputs": ["default"],
      "cache": false
    },
    "create": {
      "dependsOn": ["build"],
      "inputs": ["default"]
    },
    "deploy": {
      "dependsOn": ["build"],
      "inputs": ["default"]
    }
  },
  "tui": {
    "enabled": false
  },
  "release": {
    "projectsRelationship": "independent",
    "version": {
      "conventionalCommits": true,
      "fallbackCurrentVersionResolver": "disk",
      "versionActionsOptions": {
        "skipLockFileUpdate": true
      }
    },
    "changelog": {
      "automaticFromRef": false,
      "projectChangelogs": {
        "createRelease": "github",
        "file": false
      }
    }
  }
}
