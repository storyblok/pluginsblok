{
  "name": "pluginsblok",
  "private": true,
  "version": "0.0.1",
  "description": "Official monorepo for Storyblok plugins open source packages",
  "packageManager": "pnpm@10.15.0",
  "type": "module",
  "scripts": {
    "pluginsblok": "node tools/pluginsblok/dist/index.mjs",
    "prepare": "husky",
    "lint": "nx run-many --target=lint",
    "lint:fix": "nx run-many --target=lint --fix",
    "lint:affected": "nx affected:lint"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@nx/js": "^21.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "nx": "^21.4.0",
    "typescript": "^5.9.2"
  }
}
